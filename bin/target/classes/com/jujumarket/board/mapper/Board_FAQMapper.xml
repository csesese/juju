   <sql id="criteria">
   <trim prefix="(" suffix=")AND" prefixOverrides="OR">
   <foreach item='type' collection="typeArr">
   <trim prefix ="OR">
   <choose>
   <when test="type =='T'.toString()">
   title like '%' ||#{keyword}||'%'
   </when>
   <when test="type =='C'.toString()">
   content like '%' ||#{keyword}||'%'
   </when>
   <when test="type =='I'.toString()">
   idNo like '%' ||#{keyword}||'%'
   </when>
   </choose>
   </trim>
   </foreach>
   </trim><!--  prefix end -->
   </sql>
   

   <select id="getListWithPaging" resultType="com.jujumarket.board.domain.Board_FAQVO">
   <![CDATA[
   select
       postingNo,title,content,boardType,idNo,regDate
       from
       (
       
       select /*+INDEX_DESC(t_board_faq pk_board) */
       rownum rn,postingNo,title,content,boardType,idNo,regDate
       from
       t_Board_FAQ
       
       where  boardType = '1' and
       
   ]]>
  
  <include refid="criteria"></include>
   
   <![CDATA[
   
    rownum <= #{pageNum}*#{amount}
       )
       where rn > (#{pageNum}-1) * #{amount}
   ]]>
   </select>

    <select id="getTotalCount" resultType="int">
   select count(*) from t_board_faq 
   
   where 
   
   <include refid="criteria"></include>
   
   
   postingNo > '1'
   
      </select>
  
  
  
    <select id="noticegetListWithPaging" resultType="com.jujumarket.board.domain.Board_FAQVO">
   <![CDATA[
   select
